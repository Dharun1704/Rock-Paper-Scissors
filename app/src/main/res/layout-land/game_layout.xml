<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8DC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:weightSum="100"
        android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:id="@+id/layoutA"
        android:layout_marginEnd="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player A:"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#663E65"
                android:id="@+id/tv_playerA"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#663E65"
                android:id="@+id/tv_scoreA"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="rock"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/bt_rock"
            android:background="#F5DEB3"
            android:textColor="#663E35"/>

        <Button
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="paper"
            android:layout_marginBottom="5dp"
            android:id="@+id/bt_paper"
            android:background="#F5DEB3"
            android:textColor="#663E35"/>

        <Button
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="scissor"
            android:id="@+id/bt_scissor"
            android:background="#F5DEB3"
            android:textColor="#663E35"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="90"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/picLayoutA">

            <ImageView
                android:id="@+id/imageViewA"
                android:layout_width="200dp"
                android:layout_height="174dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/tv_roundRemaining"
                android:layout_width="230dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Rounds Remaining: "
                android:textAllCaps="true"
                android:textColor="#663E65"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="230dp"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Winner"
                android:textAllCaps="true"
                android:textColor="#663E35"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/picLayoutB">

            <ImageView
                android:id="@+id/imageViewB"
                android:layout_width="200dp"
                android:layout_height="174dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/layoutB">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player B:"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#663E65"
                android:id="@+id/tv_playerB"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#663E65"
                android:id="@+id/tv_scoreB"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="rock"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/bt_rock2"
            android:background="#F5DEB3"
            android:textColor="#663E35"/>

        <Button
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="paper"
            android:layout_marginBottom="5dp"
            android:id="@+id/bt_paper2"
            android:background="#F5DEB3"
            android:textColor="#663E35"/>

        <Button
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="scissor"
            android:id="@+id/bt_scissor2"
            android:background="#F5DEB3"
            android:textColor="#663E35"/>

    </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#f5DEB3"
            android:text="Continue"
            android:textColor="#663E35" />

    </LinearLayout>

</ScrollView>